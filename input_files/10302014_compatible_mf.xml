<?xml version="1.0" standalone=no>
<!-- A comment -->
<INPUT_FILE>
  <REGIONS>
    <Number_of_regions> 1 </Number_of_regions>
    <Number_of_materials> 1 </Number_of_materials>
      <Region> 0 
        <N_cells> 10 </N_cells>
        <Left_bound> 0.0 </Left_bound>
        <Right_bound> 5.0 </Right_bound>
        <Spacing> Equal </Spacing>
        <Material_number> 0 </Material_number>
      </Region>
  </REGIONS>
  
  <MATERIALS>
    <!-- CM_SH_KEV or  UNITY-->
    <Units> CM_SH_KEV </Units>
    <Material> 0
      <Scattering_Opacity_type> Constant_xs 
        <Constant_value> 1.0 </Constant_value>
      </Scattering_Opacity_type>      
      <Absorption_Opacity_type> Constant_xs 
        <Constant_value> 0.9 </Constant_value>
      </Absorption_Opacity_type>
      <Radiation_Fixed_Source_type> No_source </Radiation_Fixed_Source_type>
      <Temperature_Fixed_Source_type> No_source </Temperature_Fixed_Source_type>      
      <Cv_type> Constant_cv 
        <Cv_constant> 1.0 </Cv_constant>
      </Cv_type>
    </Material>
  </MATERIALS>
  
  <TIME>
    <Dt_min> 0.001 </Dt_min>
    <Dt_max> 0.1 </Dt_max>
    <T_start> 0.0 </T_start>
    <T_end> 1.0 </T_end>
    <Time_solver> Implicit_euler </Time_solver>
    <!--
      <Starting_method> Exponential </Starting_method>
    <Increase_factor> 1.25 </Increase_factor>
    -->
    
    <Starting_method> Vector </Starting_method>
    <N_vector_stages> 2 </N_vector_stages>
    <Vector_stage> 0 
      <Stage_steps> 8 </Stage_steps>
      <Stage_size> 0.001> </Stage_size>
    </Vector_stage>
    <Vector_stage> 1 
      <Stage_steps> 5 </Stage_steps>
      <Stage_size> 0.01> </Stage_size>
    </Vector_stage>
  </TIME>
  
  <SPATIAL_DISCRETIZATION>
    <DFEM_degree> 2 </DFEM_degree>
    <Integration_type> TRAD_lumping </Integration_type>
    <DFEM_interpolation_point_type> Lobatto </DFEM_interpolation_point_type>
    <Opacity_treatment> Interpolating </Opacity_treatment>
    <Opacity_interpolation_point_type> Lobatto </Opacity_interpolation_point_type>
    <Opacity_polynomial_degree> 2 </Opacity_polynomial_degree>    
  </SPATIAL_DISCRETIZATION>
  
  <ANGULAR_DISCRETIZATION>
    <Number_of_angles> 2 </Number_of_angles>
    <Number_of_groups> 3 </Number_of_groups>
    <Quadrature_type> Gauss_angle </Quadrature_type>    
    <Number_of_legendre_moments> 1 </Number_of_legendre_moments>
    <!-- Give group edges in order from edge 0 to Number_of_groups, in ascending order -->
    <Group_Boundaries> 0
      <Edge_Value> 0. </Edge_Value>
    </Group_Boundaries>
    <Group_Boundaries> 1
      <Edge_Value> 0. </Edge_Value>
    </Group_Boundaries>
    <Group_Boundaries> 2
      <Edge_Value> 0. </Edge_Value>
    </Group_Boundaries>
    <Group_Boundaries> 3
      <Edge_Value> 0. </Edge_Value>
    </Group_Boundaries>
  </ANGULAR_DISCRETIZATION>
  
  <SOLVER>
    <!-- Valid options are FP_SWEEPS, FP_DSA, KRYLOV_SWEEPS, KRYLOV_DSA   -->
    <WG_Solver_type> FP_SWEEPS 
      <Max_Within_Group_Sweeps> 10 </Max_Within_Group_Sweeps>
    </WG_Solver_type>
    <WG_Tolerance> 1.0E-12 </WG_Tolerance>
    
    <BG_Tolerance> 1.0E-10 </BG_Tolerance>
    <!-- FP_NO_ACCEL, FP_LMFGA, KRYLOV_LMFGA -->
    <MF_Solver_Type> FP_NO_ACCEL 
      <Max_Iterations> 20 </Max_Iterations>
    </MF_Solver_Type>
    
    <Thermal_Tolerance> 1.0E-8 </Thermal_Tolerance>
  </SOLVER>
  
  <BC_IC>
   <Temperature_IC_Type> CONSTANT_TEMPERATURE_IC 
    <Region> 0
      <Material_Temperature> 0.5 </Material_Temperature>
    </Region>
   </Temperature_IC_Type>
   <Radiation_IC_Type> PLANCKIAN_IC 
    <Region> 0
      <Radiation_Temperature> 0.5 </Radiation_Temperature>
    </Region>
   </Radiation_IC_Type>
   
   <!-- Valid options are PLANCKIAN_BC, VACUUM, REFLECTIVE   -->
   <Left_Radiation_BC_Type> PLANCKIAN_BC 
    <!-- Valid options are BC_GLANCE, BC_NORMAL, BC_ISOTROPIC   -->
    <BC_Incidence> BC_GLANCE </BC_Incidence>   
    <BC_Temperature> 10 </BC_Temperature>
   </Left_Radiation_BC_Type>
   
   <!-- Valid options are PLANCKIAN_BC, VACUUM   -->
   <Right_Radiation_BC_Type> VACUUM </Right_Radiation_BC_Type>
   
   <!-- Valid options are BC_CONSTANT, BC_BURST  -->
   <BC_Time_Dependent> BC_CONSTANT </BC_Time_Dependent>
  </BC_IC>



</INPUT_FILE>
